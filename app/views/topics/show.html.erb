<% provide(:title, @topic.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="topic_info">
      <h1>
        <%= @topic.name %>
      </h1>

      <h2><%= link_to "Edit topic", edit_topic_path(@topic)%></h2>

      <h2><%= link_to "Create new problem", new_problem_path(:topic_from => @topic.id)%></h2>

      <h2><%= link_to "View all topics", topics_path %></h2>
    </section>
  </aside>

  <div class="col-md-9">
    <% if @topic.problems.any? %>
      <h3>Problems (<%= @topic.problems.count %>)</h3>
      <ol class="problems">
        <%= render @problems %>
      </ol>
      <%= will_paginate @problems %>
    <% end %>
  </div>
</div>